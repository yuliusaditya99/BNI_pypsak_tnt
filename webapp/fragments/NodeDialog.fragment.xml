<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:sf="sap.ui.layout.form" xmlns:l="sap.ui.layout">
    <Dialog title="Choose Action" id="nodeDialog">
        <VBox class="sapUiSmallMargin">
            <sf:SimpleForm editable="true" width="100%" layout="ResponsiveGridLayout">
                <sf:content>
                    <Label text="Current Version" />
                    <Input id="currentVersionInput" type="Text" value="{path: '/currentVersion', formatter: '.emptyIfNull'}" />

                    <Label text="Adjust Value" />
                    <Input id="adjustInput" type="Text" value="{path: '/adjust', formatter: '.emptyIfNull'}" />

                    <Label text="Start Date" />
                    <Input id="startDateInput" type="Text" value="{path: '/startDate', formatter: '.emptyIfNull'}" />

                    <Label text="Countdown" />
                    <Input id="countdownInput" type="Text" value="{path: '/countdown', formatter: '.emptyIfNull'}" />

                    <Label text="Show Countdown" />
                    <Input id="isShowCountdownInput" type="Text" value="{path: '/isShowCountdown', formatter: '.emptyIfNull'}"/>
                    
                </sf:content>
            </sf:SimpleForm>
        </VBox>
        <buttons>
            <Button text="Run" icon="sap-icon://play" press="onRunPress"/>
            <Button type="Emphasized" text="Cancel" icon="sap-icon://cancel" press="onCancelPress"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
